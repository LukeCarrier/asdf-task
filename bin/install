#!/usr/bin/env bash

set \
  -o errexit \
  -o nounset \
  -o pipefail

source "$(dirname $0)/../lib/utils.sh"

# required environment variables
: ${ASDF_INSTALL_TYPE?}
: ${ASDF_INSTALL_VERSION?}
: ${ASDF_INSTALL_PATH?}
: ${ASDF_DOWNLOAD_PATH?}

readonly repository="go-task/task"
readonly toolname="task"

install() {
    local -r os=$(get_os)
    local -r arch=$(get_arch)
    local -r fmt=$(get_archive_fmt $os)
    local -r bin_ext=$(get_bin_ext $os)
    local -r filename="${toolname}_${os}_${arch}.${fmt}"
    local -r download_pkg="${ASDF_DOWNLOAD_PATH}/${filename}"

    echo "Extracting ${toolname} from ${fmt} archive"
    [ ! -d "${ASDF_INSTALL_PATH}/bin" ] && mkdir -p "${ASDF_INSTALL_PATH}/bin"
    extract_archive "$fmt" "$download_pkg" "${ASDF_INSTALL_PATH}/bin" "${toolname}${bin_ext}"
    if [ $? -eq 0 ]
    then
      echo "Successfully installed ${toolname} ${ASDF_INSTALL_VERSION}"
      exit 0
    else
      echo "Failed to install ${toolname} ${ASDF_INSTALL_VERSION}"
      exit 1
    fi
}

install
